function gb {
  branch=$(git-symbolic-ref HEAD 2> /dev/null || false)
  branch=${branch##*/}
  if [[ $branch ]]; then echo " [$branch]"; fi
}

function rv {
  rv=$?
  if [ $rv -ne 0 ]; then echo "($rv) "; fi
}


PS1='`rv`${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]`gb`\$ '


# full line?
# hostname, colored using hash of hostname
# compressed ts
